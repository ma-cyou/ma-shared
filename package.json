{
	"name": "ma-shared",
	"version": "1.0.0",
	"description": "Mapagmataas' website",
	"author": "Mapagmataas",
	"homepage": "https://ma.cyou",
	"repository": "github:ma-cyou/ma-shared",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"deploy": "vite build && gh-pages -d build -t true",
		"preview": "vite build && vite preview",
		"previewGh": "vite build && http-server build",
		"validate": "npm run check && prettier --write . && eslint .",
		"test": "npm run test:integration && npm run test:unit && npm run test:e2e && npm run test:unit -- --run",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@playwright/test": "^1.47.2",
		"@sveltejs/adapter-static": "^3.0.5",
		"@sveltejs/kit": "^2.6.3",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
		"@tailwindcss/typography": "^0.5.15",
		"@tsconfig/svelte": "^5.0.4",
		"@types/eslint": "^9.6.1",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.12.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.44.1",
		"gh-pages": "^6.1.1",
		"lucide-svelte": "^0.447.0",
		"postcss": "^8.4.47",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"sass": "^1.79.4",
		"svelte": "^5.0.0-next.262",
		"svelte-check": "^4.0.4",
		"tailwindcss": "^3.4.13",
		"typescript": "^5.6.2",
		"typescript-eslint": "^8.8.1",
		"vite": "^5.4.8",
		"vitest": "^2.1.2"
	},
	"type": "module"
}
